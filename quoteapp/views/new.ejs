<body>
    
    <h1>Add Quote</h1>
<div>
    <form action="/quotes" method="POST">
    
            <label for="namw"><h2>Name :</h2></label>
            <input type="text" name="name" id="name" placeholder="Name">
            <br>
            <label for="description"><h2>Quote :</h2></label>
            <textarea name="description" id="description" cols="30" rows="3" placeholder="Enter Quote"></textarea><br>
        <button type="submit">Add Quote</button>
    </form>
</div>
